section.container.py-4
  if (s.products && s.products.length)
    .row
      each p in s.products
        .col-6.col-sm-4.col-lg-3
          .card(id="product_card_" + p.id)
            a.product-card-link(href= path + "/product/" + p.id)
              img.card-img-top(src= p.image)
              .card-body.text-center
              
                h5(class="card-title")= p.title
                p(class="card-text")= p.currency + p.price
            .card-body.pt-0
              button.btn.btn-success.btn-block(type="button", onClick="addToCart('" + p.id + "')") Add to Cart

    script(src="/javascripts/shop.js", type="text/javascript")