extends ./../layout

block content
  .container-fluid.pt-3.pb-5
    form(method="POST", action="/api/pages/" + page.id, enctype="application/x-www-form-urlencoded")
      .fixed-top
        .d-flex.justify-content-between.align-items-center

          h1(class="h4 mb-0")
            span(class="font-weight-light") Edit Page:
            span  #{page.name}
          div.responsive-buttons
            button(type="reset", class="btn btn-outline-dark", onclick="") Discard Changes
            button(type="submit", class="btn btn-success ml-2") Save Changes
      include ./../includes/page-form
    .pb-4
      div(class="col-md-8")
        hr
        div(class="card border-danger")
          div(class="card-header bg-danger text-light") Danger Zone
          div(class="card-body")
            div(class="row")
              div(class="col")
                h6(class="card-title mb-0") 
                  span Delete this page
                  br
                  small This action cannot be undone
              div(class="col-auto")
                form(method="POST", action="/api/pages/" + page.id + "/delete")
                  button(type="submit", class="btn btn-outline-danger")
                    i(class="fa fa-trash-alt")
                    span  Delete