extends ./../layout

block content
  form.container-fluid.pt-3.pb-5(method="POST", action="/api/products", enctype="application/x-www-form-urlencoded")
    .fixed-top
      .d-flex.justify-content-between.align-items-center
        h1(class="h4 mb-0")
          span(class="font-weight-light") Create:
          span  New Product
        div.responsive-buttons
          a(class="btn btn-outline-dark", href="/admin/products") Cancel
          button(type="submit", class="btn btn-success ml-2") Finish
    include ./../includes/product-form