extends ./../layout

block content
  .container.pt-3.pb-5
    form(method="POST", action="/api/products/" + product.id, enctype="application/x-www-form-urlencoded")
      div(class="d-flex justify-content-between align-items-end")

        h1(class="h4 mb-0")
          span(class="font-weight-light") Editing:
          span  #{product.title}
        div.responsive-buttons
          button(type="reset", class="btn btn-outline-dark") Discard Changes
          button(type="submit", class="btn btn-success ml-2") Save Changes
      hr
      include ./../includes/product-form
    div(class="row")
      div(class="col-md-8")
        hr
        div(class="card border-danger")
          div(class="card-header bg-danger text-light") Danger Zone
          div(class="card-body")
            div(class="row")
              div(class="col")
                h6(class="card-title mb-0") 
                  span Delete this product
                  br
                  small This action cannot be undone
              div(class="col-auto")
                form(method="POST", action="/api/products/" + product.id + "/delete")
                  button(type="submit", class="btn btn-outline-danger")
                    i(class="fa fa-trash-alt")
                    span  Delete