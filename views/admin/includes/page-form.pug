.row
  .col-md-8
    .form-group
      label(for="name") Page Name
      input(id="name", name="name", type="text", value= page.name, placeholder="Enter a display name for your page", class="form-control", required)
    .form-group
      label(for="path") Page URL
      .input-group
        .input-group-prepend
          span(class="input-group-text")= url
        input(id="path", name="path", type="text", value= page.path, placeholder="Choose a path for your page starting with /", class="form-control", required)
    
    .form-group
      hr
      div(class="d-flex justify-content-between align-items-center")
        div
          label(class="h5 mb-0", for="sections") Sections
          p.small.mb-0 Drag and drop to reorder the page.
        button(type="button", class="btn btn-sm btn-primary ml-2" data-toggle="modal" data-target="#sectionSelector")
          i.fa.fa-plus
          span  Add Sections
      input(type="hidden", id="sections", name="sections", value= page.sections.join(','))
      #sortableSections
        if page.sections
          include sortable-sections


include section-selector
