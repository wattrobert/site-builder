extends ./../layout

block content
  .container.py-4
    .d-flex.justify-content-between.align-items-end
      h1(class="h4 mb-0") Section Manager
      .dropdown
        button.btn.btn-success.ml-2.dropdown-toggle(type="button", id="addSectionButton", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Add Section
        .dropdown-menu.dropdown-menu-right(aria-labelledby="addSectionButton")
          a.dropdown-item(href="/admin/sections/create/jumbotron") Jumbotron
          a.dropdown-item(href="/admin/sections/create/showcase") Showcase
    hr
    .row
      .col-md-8
        each s in sections
          .card.position-relative.mb-3.shadow-sm
            .card-body
              a(class="float-right" title="Edit Section", href="/admin/sections/edit/" + s.id)
                i(class="fa fa-edit")
              h5= s.name
              .section-snapshot-container
                .section-snapshot
                  case s.type
                    when "cart"
                      include ./../../public/includes/cart
                    when "checkout"
                      include ./../../public/includes/checkout
                    when "jumbotron"
                      include ./../../public/includes/jumbotron
                    when "showcase"
                      include ./../../public/includes/showcase
                span(class="badge badge-secondary") #{s.type.replace(/^\w/, c => c.toUpperCase())}