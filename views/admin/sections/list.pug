extends ./../layout

block content
  div(class="container py-4")
    div(class="d-flex justify-content-between align-items-end")
      h1(class="h4 mb-0") Section Manager
      div
        //- a(href="/admin/sections/create", class="btn btn-outline-primary") 
        //-   i(class="fa fa-plus")
        //-   span  New Template
        a(href="/admin/sections/create", class="ml-2 btn btn-success") 
          i(class="fa fa-plus")
          span  Add Section
    hr
    .list-group
      each s in sections
        .list-group-item.position-relative
          span(class="badge badge-secondary") #{s.type.replace(/^\w/, c => c.toUpperCase())}
          .section-snapshot-container
            .section-snapshot
              case s.type
                when "jumbotron"
                  include ./../../public/includes/jumbotron
                when "product"
                  include ./../../public/includes/product


    script
      include snapshot.js